{
  "name": "animator-studio",
  "version": "0.0.1",
  "description": "A NodeJS powered animation studio app for creating animated videos from SVGs for narrated informational videos",
  "main": "src/server.js",
  "typings": "docs/index.d.ts",
  "repository": "https://github.com/matthewfcarlson/animator-studio",
  "license": "MPL-2.0",
  "keywords": [],
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "run-s clean && run-p build:dev",
    "build:dev": "webpack --config src/webpack.dev.js",
    "build:prod": "webpack --config src/webpack.prod.js",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc --silent ava",
    "watch": "run-s clean build:main && run-p \"build:dev -- -w\" \"test:unit -- --watch\"",
    "cov": "run-s build test:unit cov:html && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && open-cli docs/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out docs/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json docs/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d docs/docs",
    "version": "standard-version",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "clean": "trash build test docs",
    "prepare-release": "run-s reset test clean cov:check doc:html version doc:publish build:prod",
    "pre-push": "run-s clean doc:html build:prod",
    "start": "node src/server.js && open-cli localhost:3000",
    "dev": "run-s clean doc:html build:dev start",
    "create-typing": "dts-gen -m Medya"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "cov": "Rebuild, run tests, then create and open the coverage report",
    "doc": "Generate HTML API documentation and open it in a browser",
    "doc:json": "Generate API documentation in typedoc JSON format",
    "version": "Bump package.json version, update CHANGELOG.md, tag release",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "prepare-release": "One-step: clean, build, test, publish docs, and prep a release"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "dts-gen": "^0.5.8",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@bitjson/npm-scripts-info": "^1.0.0",
    "@bitjson/typedoc": "^0.15.0-0",
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/connect-history-api-fallback": "^1.3.3",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.14",
    "@types/fs-extra": "^8.0.0",
    "@types/howler": "^2.1.1",
    "@types/jest": "^23.1.4",
    "@types/jquery": "^3.3.31",
    "@types/node": "^12.7.2",
    "@types/shelljs": "^0.8.5",
    "@types/socket.io": "^2.1.2",
    "@vue/test-utils": "^1.0.0-beta.29",
    "animation-frame": "^0.3.0",
    "autoprefixer": "^9.7.1",
    "ava": "2.2.0",
    "babel-core": "^6.26.3",
    "bootstrap": "^4.3.1",
    "bootstrap-vue": "^2.1.0",
    "codecov": "^3.5.0",
    "compression-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "favicons-webpack-plugin": "^1.0.1",
    "file-loader": "^4.2.0",
    "gh-pages": "^2.0.1",
    "howler": "^2.1.2",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^6.0.0",
    "lowdb": "^1.0.0",
    "meyda": "^4.2.0",
    "microsoft-cognitiveservices-speech-sdk": "^1.8.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "open-cli": "^5.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "prerender-spa-plugin": "^3.4.0",
    "prettier": "^1.18.2",
    "raw-loader": "^3.1.0",
    "sass-loader": "^8.0.0",
    "standard-version": "^6.0.1",
    "store2": "^2.10.0",
    "style-loader": "^1.0.0",
    "svg-inline-loader": "^0.8.0",
    "trash-cli": "^3.0.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^6.0.1",
    "typescript": "^3.5.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "underscore": "^1.12.1",
    "vue": "^2.6.10",
    "vue-class-component": "^7.0.2",
    "vue-directive-touch": "^1.0.28",
    "vue-jest": "^3.0.4",
    "vue-loader": "^15.7.1",
    "vue-property-decorator": "^8.1.0",
    "vue-router": "^3.0.3",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "vue2-touch-events": "^2.0.0",
    "vuex": "^3.1.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.7"
  },
  "ava": {
    "failFast": true,
    "files": [
      "build/**/*.spec.js"
    ],
    "sources": [
      "build/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
